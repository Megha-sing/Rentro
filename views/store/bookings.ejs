<%- include('../partials/head') %>
    </head>
    <body class="font-sans">
        <%- include('../partials/header') %>
        <main class="bg-black/98 min-h-screen pt-18 font-bold">
            <div 
                class="absolute inset-0 h-full w-full 
                    bg-[linear-gradient(to_right,#ffffff0f_1px,transparent_1px),linear-gradient(to_bottom,#ffffff0f_1px,transparent_1px)] 
                    bg-[size:24px_24px] pointer-events-none z-0"
            ></div>
            <div class="relative z-10">
                <div class="text-transparent bg-clip-text bg-gradient-to-r from-blue-300 to-blue-400 justify-center flex items-center w-full text-4xl p-5">
                    <h1>My Bookings</h1>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-5">
                    <% bookingHomes.forEach(home => { %>
                        <div class="w-full bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-zinc-950 dark:border-gray-500/50 transition-shadow hover:shadow-fuchsia-800 duration-200">
                            <img class="p-8 rounded-t-lg w-full h-64 object-cover" src="<%= home.photo %>" alt="House Image"/>
                            <div class="px-5 pb-5 text-center">
                                <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= home.houseName %></h5>
                                <p class="text-sm text-gray-500 dark:text-gray-400"><%= home.location %></p>
                                <div class="flex w-full justify-center items-center mt-2.5 mb-5">
                                    <svg class="w-5 h-5 text-yellow-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                    </svg>
                                    <span class="ml-2 text-gray-900 dark:text-white"><%= home.rating %></span>
                                </div>
                                <div class="flex w-full items-center justify-center">
                                    <span class="text-xl font-bold text-gray-900 dark:text-white">â‚¹ <%= home.price %>/Night</span>
                                </div>
                                <div class="flex items-center justify-center mt-8 w-full gap-4">
                                    <span class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-400 to-blue-600 text-white text-base font-semibold rounded-full shadow-md">
                                        <svg class="w-5 h-5 mr-2 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                                        </svg>
                                        Booked
                                    </span>
                                    <form action="/cancel-booking/<%= home._id %>" method="POST">
                                        <button
                                            type="submit"
                                            class="hover:cursor-pointer inline-flex items-center px-4 py-2 border border-gray-600 shadow hover:shadow-gray-500 text-red-500 transition-all rounded-4xl"
                                            onclick="return confirm('Are you sure you want to cancel this booking?');"
                                        >
                                            Cancel Booking
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>
    </body>
</html>